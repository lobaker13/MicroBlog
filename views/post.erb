<% if @current_user && @current_user.id == @post.user_id %>
  <h2><%= @post.title %></h2>
	<h3><a href="/user/<%= @post.user.id %>"><%= @post.user.full_name %></a></h3>
	<p><%= @post.body %></p>
  <a href="/<%= @post.user.username %>/<%=@post.id %>/edit">Edit</a> | <a href="/post/<%= @post.id %>/delete">Delete</a>
<% else %>
  <h2><%= @post.title %></h2>
	<h3><a href="/user/<%= @post.user.id %>"><%= @post.user.full_name %></a></h3>
	<p><%= @post.body %></p>
<% end %>
